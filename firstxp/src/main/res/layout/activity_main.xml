<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/zhuce"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="一键注册Telegram账号"
            android:textColor="#000000" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/send"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="发送手机号"
            android:textColor="#000000" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入短信验证码" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/sendSMS"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="发送验证码"
            android:textColor="#000000" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addContact"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="添加通讯录好友"
            android:textColor="#000000" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/groupLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入进群链接" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/joinGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="进群"
            android:textColor="#000000" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/leaveGroupLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入退群链接" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/leaveGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="退群"
            android:textColor="#000000" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/addFriendsGroupLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入加好友群链接" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/addFriendsGroup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="进群加好友"
            android:textColor="#000000" />
        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/groupNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入统计好友群链接" />
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/groupNumberBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:text="统计指定群好友"
            android:textColor="#000000" />
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>